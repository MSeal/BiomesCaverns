<?xml version="1.0" encoding="utf-8" ?>
<Defs>	
    
    <ThingDef ParentName="TreeBase" Name="BMT_CaveTreeBase" Abstract="True">
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<cavePlant>true</cavePlant>
			</li>
		</modExtensions>
        <plant>
            <growMinGlow>0</growMinGlow>
            <growOptimalGlow>0</growOptimalGlow>
			<cavePlant>true</cavePlant>
			<interferesWithRoof>false</interferesWithRoof>
            <harvestTag>Wood</harvestTag>
            <harvestedThingDef>WoodLog</harvestedThingDef>
        </plant>
    </ThingDef>
	
	
	
    <ThingDef ParentName="BMT_CaveTreeBase">
        <defName>BMT_Spirecap</defName>
        <label>spirecap</label>
        <description>A strong mushroom tree. Slow-growing, but this woody fungus is very strong.</description>
        <graphicData>
            <texPath>BMT_Caverns/Things/Plant/Spirecap</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <statBases>
            <Beauty>2</Beauty>
        </statBases>
        <plant>
            <wildClusterRadius>3</wildClusterRadius>
            <growDays>30</growDays>
            <dieIfLeafless>true</dieIfLeafless>
            <harvestWork>1000</harvestWork>
            <harvestYield>36</harvestYield>
			<wildOrder>1</wildOrder>
            <neverBlightable>true</neverBlightable>
        </plant>
    </ThingDef>
</Defs>